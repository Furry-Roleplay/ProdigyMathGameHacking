{
	"include": [
		"./src/**/*", "babel.config.js"
	],
	"compilerOptions": {
		"target": "es2020",
		"module": "amd",
		"sourceMap": true,
		"outDir": "./dist/",
		"rootDir": "./src/",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true
	}
}
